<div class="row mb-4">
  <div class="col-3">
    <div class="dropdown">
      <button class="btn btn-outline-primary btn-block dropdown-toggle" type="button" id="dropdownButton"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">月份</button>
      <div class="dropdown-menu" aria-labelledby="dropdownButton">
        <a class="dropdown-item" href="/filter/month/01">1月</a>
        <a class="dropdown-item" href="/filter/month/02">2月</a>
        <a class="dropdown-item" href="/filter/month/03">3月</a>
        <a class="dropdown-item" href="/filter/month/04">4月</a>
        <a class="dropdown-item" href="/filter/month/05">5月</a>
        <a class="dropdown-item" href="/filter/month/06">6月</a>
        <a class="dropdown-item" href="/filter/month/07">7月</a>
        <a class="dropdown-item" href="/filter/month/08">8月</a>
        <a class="dropdown-item" href="/filter/month/09">9月</a>
        <a class="dropdown-item" href="/filter/month/10">10月</a>
        <a class="dropdown-item" href="/filter/month/11">11月</a>
        <a class="dropdown-item" href="/filter/month/12">12月</a>
      </div>
    </div>
  </div>

  <div class="col-3">
    <div class="dropdown">
      <button class="btn btn-outline-primary btn-block dropdown-toggle" type="button" id="dropdownButton"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">類別</button>
      <div class="dropdown-menu" aria-labelledby="dropdownButton">
        <a class="dropdown-item" href="/filter/category/food">餐飲食品</a>
        <a class="dropdown-item" href="/filter/category/travel">交通出行</a>
        <a class="dropdown-item" href="/filter/category/leisure">休閒娛樂</a>
        <a class="dropdown-item" href="/filter/category/home">家居物業</a>
        <a class="dropdown-item" href="/filter/category/other">其他</a>
      </div>
    </div>
  </div>
</div>

<div class="row mb-4">
  <div class="col-3">
    <h2 for="name">總金額：</h2>
  </div>
  <div class="col-3">
    <h1>{{totalAmount}}</h1>
  </div>
</div>

<ul class="list-group mb-4">
  {{#each records}}
  <li class="list-group-item mb-1 pb-2">
    <div class="row">
      <div class="col-2">
        {{#switch this.category}}
        {{#case 'home'}} <i class="fas fa-home fa-5x"></i> {{/case}}
        {{#case 'travel'}} <i class="fas fa-shuttle-van fa-5x"></i> {{/case}}
        {{#case 'leisure'}} <i class="fas fa-grin-beam fa-5x"></i> {{/case}}
        {{#case 'food'}} <i class="fas fa-utensils fa-5x"></i> {{/case}}
        {{#case 'other'}} <i class="fas fa-pen fa-5x"></i> {{/case}}
        {{/switch}}
      </div>
      <div class="col-auto mr-auto">
        <div class="d-inline-block">
          <p style="line-height: 2em">{{this.name}}</p>

          <p style="line-height: 1.5em">{{this.date}}</p>
        </div>

      </div>
      <div class="col text-center ">
        <h3 style="line-height: 2em">{{this.amount}}</h3>
      </div>
      <div class="col-2">
        <a href="/records/{{this.id}}/edit" class="btn btn-outline-dark btn-block">修改</a>
        <form action="/records/{{this.id}}/delete?_method=DELETE" method="post" style="display:inline">
          <button type="submit" class="btn btn-outline-dark btn-block mt-2">刪除</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>

<a href="/records/new" class="btn btn-outline-info btn-block mb-5">新增支出</a>